bindsym $mod+space exec /usr/bin/rofi -show run
bindsym $mod+g exec /usr/bin/rofi -show window

#Shutdown
bindsym $mod+Shift+s exec "i3-nagbar -t error -m 'Do you really want to shutdown?' -b 'Yes' 'shutdown now'"

#Brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 & pkill -SIGRTMIN+11 i3blocks # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 & pkill -SIGRTMIN+11 i3blocks # decrease screen brightness

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ & pkill -SIGRTMIN+10 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- & pkill -SIGRTMIN+10 i3blocks #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle & pkill -SIGRTMIN+10 i3blocks # mute sound

# Media controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause # Play/Pause song
bindsym XF86AudioNext exec --no-startup-id playerctl next # Next song
bindsym XF86AudioPrev exec --no-startup-id playerctl previous # Prev song

# Bluetooth control
bindsym XF86Search exec --no-startup-id i3-sensible-terminal -e q30 & pause


#Wakelock Controls
bindsym Shift+XF86MonBrightnessUp exec --no-startup-id xset s off -dpms #Enable wakelock
bindsym Shift+XF86MonBrightnessDown exec --no-startup-id xset s on +dpms #Disable wakelock

#Wallpaper
bindsym $mod+w exec wallpaper-reddit
bindsym $mod+Shift+w exec firefox --new-window $(cat ~/.wallpaper/permalink.txt)
#bindsym $mod+Shift+w exec wallpaper-reddit --blacklist
exec --no-startup-id feh --bg-scale /home/nick/.wallpaper/wallpaper.jpg
exec_always --no-startup-id wallpaper-reddit --startup

#Screenshot
#bindsym Print exec "scrot ~/Pictures/Screenshots/$(date).png"
bindsym --release Print exec "scrot ~/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H:%M:%S).png"

#Shadows/transparency
exec_always --no-startup-id compton 

#Lock
exec --no-startup-id xautolock -time 10 -locker '~/bin/lock.sh'
